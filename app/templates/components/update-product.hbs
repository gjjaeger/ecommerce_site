{{#if updateProductForm}}
  <h4>Update {{product.name}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Product Name</label>
        {{input value=name id="name" placeholder=product.name}}
      </div>

      <div class="form-group">
        <label for="barcode">Barcode</label>
        {{input value=barcode id="barcode" placeholder=product.barcode}}
      </div>

      <div class="form-group">
        <label for="brand">Brand</label>
        {{input value=brand id="brand" placeholder=product.brand}}
      </div>

      <div class="form-group">
        <label for="price">Price</label>
        {{input value=price id="price" placeholder=product.price}}
      </div>

      <div class="form-group">
        <label for="description">Product Description</label>
        {{input value=description id="description" placeholder=product.description}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image" placeholder=product.image}}
      </div>

      <button class="btn" {{action 'update' product}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn" {{action 'updateProductForm'}}>Update</button>
{{/if}}
