{{#if updateProductForm}}
  <div class="col-xs-12 update_form">
    <form>
      <div class="form-group col-xs-2">
        <label for="name">Product Name</label>
        {{input value=name id="name" placeholder=product.name}}
      </div>

      <div class="form-group col-xs-2">
        <label for="barcode">Barcode</label>
        {{input value=barcode id="barcode" placeholder=product.barcode}}
      </div>

      <div class="form-group col-xs-2">
        <label for="brand">Brand</label>
        {{input value=brand id="brand" placeholder=product.brand}}
      </div>

      <div class="form-group col-xs-1">
        <label for="price">Price</label>
        {{input value=price id="price" placeholder=product.price size='5'}}
      </div>

      <div class="form-group col-xs-2">
        <label for="description">Product Description</label>
        {{input value=description id="description" placeholder=product.description}}
      </div>

      <div class="form-group col-xs-2">
        <label for="image">Image URL</label>
        {{input value=image id="image" placeholder=product.image}}
      </div>
      <div class="col-xs-1 save_btn">
        <button class="btn" {{action 'update' product}}>Save</button>
      </div>
    </form>
  </div>
{{else}}
  <div class="col-xs-1 update_btn">
    <button class="btn" {{action 'updateProductForm'}}>Update</button>
  </div>
{{/if}}
