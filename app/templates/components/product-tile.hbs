<div class="container">
  <div class="row store_products">
    <div class="col-xs-1 store_img">
      <img class="store_image" src={{product.image}} alt={{product.name}}>
    </div>
    <div class="col-xs-2">
      <p>{{product.barcode}}</p>
    </div>
    <div class="col-xs-2">
      <p>{{product.brand}}</p>
    </div>
    <div class="col-xs-3">
      <p>{{product.name}}</p>
    </div>
    <div class="col-xs-2">
      <p>HKD {{product.price}}</p>
    </div>
      {{update-product product=product update="update"}}
  </div>
</div>
